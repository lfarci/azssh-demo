# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in the values

# Azure subscription ID
subscription_id = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Workflow name (used to compute resource group and VM names)
workflow_name = "azssh-demo"

# Azure region
location = "eastus"

# VM configuration
vm_size        = "Standard_B2s"
admin_username = "azureuser"

# Virtual network configuration
vnet_address_space    = ["10.0.0.0/16"]
subnet_address_prefix = ["10.0.1.0/24"]

# List of Azure AD user object IDs for VM Administrator Login role
# Get user object IDs with: az ad user show --id user@domain.com --query id -o tsv
admin_users = [
  # "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
]

# Tags
tags = {
  Environment = "Demo"
  Purpose     = "Azure SSH Testing"
  ManagedBy   = "Terraform"
}
